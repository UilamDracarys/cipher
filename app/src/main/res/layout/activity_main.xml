<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.masaya.cipher.MainActivity">

    <Button
        android:id="@+id/btnCipher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:onClick="showFarms"
        android:layout_marginTop="44dp"
        android:text="Ceasar Cipher" />

    <Button
        android:id="@+id/btnTranspo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCipher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="Transposition Cipher" />

</RelativeLayout>
